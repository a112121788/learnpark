<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- 头像 -->

        <LinearLayout
            android:id="@+id/user_center_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="头像"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="51dp"
                android:layout_height="45dp"
                android:layout_weight="0.07"
                android:src="@drawable/head_img" />
        </LinearLayout>
        <!-- 昵称 -->

        <LinearLayout
            android:id="@+id/user_center_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="昵称"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pengpeng"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 邮箱 -->

        <LinearLayout
            android:id="@+id/user_center_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="邮箱"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 学号 -->

        <LinearLayout
            android:id="@+id/user_center_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="学号"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 学校 -->

        <LinearLayout
            android:id="@+id/user_center_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal"
            android:textSize="18sp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="学校"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 年级 -->

        <LinearLayout
            android:id="@+id/user_center_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal"
            android:textSize="18sp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="年级"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 专业 -->

        <LinearLayout
            android:id="@+id/user_center_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal"
            android:textSize="18sp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="专业"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 班级 -->

        <LinearLayout
            android:id="@+id/user_center_userclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal"
            android:textSize="18sp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="班级"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_userclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- 微信 -->

        <LinearLayout
            android:id="@+id/user_center_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="微信绑定"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有绑定"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/user_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_default"
            android:text="注销账号"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>