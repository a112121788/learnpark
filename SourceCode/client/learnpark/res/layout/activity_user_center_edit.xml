<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:orientation="vertical" >

        <!-- 昵称 -->

        <LinearLayout
            android:id="@+id/user_center_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="姓名"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 邮箱 -->

        <LinearLayout
            android:id="@+id/user_center_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:hint="班级"
                android:inputType="date|textEmailAddress"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 学号 -->

        <LinearLayout
            android:id="@+id/user_center_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="学号"
                android:inputType="date"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- 学校 -->

        <LinearLayout
            android:id="@+id/user_center_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal"
            android:textSize="18sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="学校名称(全名)"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 年级 -->

        <LinearLayout
            android:id="@+id/user_center_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal"
            android:textSize="18sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年级"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="年级(格式:10级)"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 专业 -->

        <LinearLayout
            android:id="@+id/user_center_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal"
            android:textSize="18sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_major"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="专业(格式：信息与计算科学)"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- 班级 -->

        <LinearLayout
            android:id="@+id/user_center_userclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal"
            android:textSize="18sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_userclass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="班级(格式:2班)"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>