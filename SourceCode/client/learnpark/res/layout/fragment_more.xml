<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- 头像 -->

        <LinearLayout
            android:id="@+id/user_center_photo"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/style_text_common"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_mail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="请登陆"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/head_img" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/style_text_common"
            android:drawableRight="@drawable/web_forword"
            android:text="消息盒子"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/style_text_common"
            android:drawableRight="@drawable/ic_notice_open"
            android:text="小工具"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/tools_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                android:id="@+id/video_recorder"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_default"
                android:text="录像" />

            <Button
                android:id="@+id/audio_record"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_default"
                android:text="录音" />

            <Button
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_default"
                android:text="拍照" />

            <Button
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_default"
                android:text="计时" />
        </LinearLayout>

        <TextView
            android:id="@+id/course_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/style_text_common"
            android:drawableRight="@drawable/ic_notice_open"
            android:text="课程提醒"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/course_remind_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style_text_common"
                android:orientation="horizontal" >

                <SeekBar
                    android:id="@+id/remindtime_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:max="60"
                    android:progress="30" />

                <TextView
                    android:id="@+id/remindtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="提前30分" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vibrate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style_text_common"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="震动提醒" />

                <ImageView
                    android:id="@+id/remind_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_on" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/voice"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style_text_common"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="响铃提醒" />

                <ImageView
                    android:id="@+id/remind_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_off" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/style_text_common"
            android:drawableRight="@drawable/web_forword"
            android:text="课表备份和导入"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/style_text_common"
            android:drawableRight="@drawable/web_forword"
            android:text="日程备份和导入"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/share_course_to"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/style_text_common"
            android:drawableRight="@drawable/web_forword"
            android:text="分享"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/style_text_common"
            android:text="文件路径：/mnt/sdcard/learnpark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_default"
            android:gravity="center"
            android:text="检查更新" />
    </LinearLayout>

</ScrollView>