<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.learnpark.app.teacher.learnpark"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <!-- 手机震动的全权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 获得手机wifi、网络的权限 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.learnpark.app.teacher.learnpark.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.learnpark.app.teacher.learnpark.DianmingActivity"
            android:label="自动点名"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.UserActivity"
            android:label="个人中心"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.UserEditActivity"
            android:label="修改信息"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.UserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.ManualActivity"
            android:label="手动点名"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.StudentsActivity"
            android:label="学生信息"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.LoginActivity"
            android:label="登陆"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.UserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.RegisterActivity"
            android:label="免费注册"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.SettingActivity"
            android:label="设置"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.SendMessagesActivity"
            android:label="发送通知"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.ImportStudentsActivity"
            android:label="导入学生"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.AddStudentsActivity"
            android:label="添加学生"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.FeedbackActivity"
            android:label="意见反馈"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.AboutActivity"
            android:label="关于学苑"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.ForgetPasswordActivity"
            android:label="忘记密码"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.learnpark.app.teacher.learnpark.WebActivity"
            android:label="学苑使用协议"
            android:parentActivityName="net.learnpark.app.teacher.learnpark.RegisterActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>